<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fragment_advanced_classroom_list_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:paddingLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_advanced_classroom_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:text="Classroom Name"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_advanced_classroom_list_student_korean_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Korean Name"
                android:textColor="@color/light_gray"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>